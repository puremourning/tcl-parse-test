{
  "configurations": {
    "Run": {
      "adapter": "CodeLLDB",
      "default": true,
      "variables": [
        {
          "arch": "x86_64"
        },
        {
          "prog": "${workspaceRoot}/debug-${arch}/bin/analyzer"
        },
        {
          "make": {
            "shell": [
              "python3",
              "-m", "compiledb",
              "make",
              "TARGET=debug",
              "${prog}"
            ]
          }
        }
      ],
      "configuration": {
        "request": "launch",
        "program": "${prog}",
        "args": [ "*${args}" ],
        "cwd": "${workspaceRoot}",
        "stopOnEntry#json": "${StopOnEntry:false}",
        "expressions": "native"
      }
    },
    "Attach container": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/build-container/src/analyzer",
        "MImode": "gdb",
        "miDebuggerServerAddress": "127.0.0.1:5678",
        "sourceFileMap": {
          "/home/dev/tcl-parse-test": "${workspaceRoot}"
        }
      }
    }
  }
}

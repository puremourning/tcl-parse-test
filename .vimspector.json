{
  "configurations": {
    "Run": {
      "adapter": "vscode-cpptools",
      "variables": {
        "make": {
          "shell": [ "python", "-m", "compiledb", "make" ]
        }
      },
      "configuration": {
        "request": "launch",
        "type": "cppdbg",
        "program": "${fileBasenameNoExtension}",
        "args": [ "*${args}" ],
        "cwd": "${workspaceRoot}",
        "miMode": "lldb",
        "stopAtEntry": true
      }
    }
  }
}

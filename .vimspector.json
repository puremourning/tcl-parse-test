{
  "configurations": {
    "Run": {
      "adapter": "CodeLLDB",
      "variables": {
        "make": {
          "shell": [ "python3", "-m", "compiledb", "make" ]
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${fileBasenameNoExtension}",
        "args": [ "*${args}" ],
        "cwd": "${workspaceRoot}",
        "stopAtEntry": true,
        "stopOnEntry": true
      }
    }
  }
}
